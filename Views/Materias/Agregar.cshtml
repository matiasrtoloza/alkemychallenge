@model Alkemy.Subjects
@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Agregar", "Materias", FormMethod.Post))
{
    <h3>Formulario para materia nueva</h3>
    <table cellpadding="0" cellspacing="0">

        <tr>
            @Html.TextBoxFor(m => m.Subject_Name, new { @class = "form-control", placeholder = "Nombre de la materia" })
            @Html.ValidationMessageFor(m => m.Subject_Name, "", new { @class = "text-danger" })
            

        </tr>

        <tr>
            @Html.TextBoxFor(m => m.Quota_Max, new { @class = "form-control", placeholder = "Maximo de personas" })
            @Html.ValidationMessageFor(m => m.Quota_Max, "", new { @class = "text-danger" })
            

        </tr>
        <tr>
            @Html.TextBoxFor(m => m.Schedule, new { @class = "form-control", placeholder = "A que hora empieza la clase" })
            @Html.ValidationMessageFor(m => m.Schedule, "", new { @class = "text-danger" })
            

        </tr>
        <tr>
            <td>

                @Html.DropDownListFor(x => x.IdTeacher, ViewBag.Lista as SelectList)


                <br />
            </td>
        </tr>
      

        <tr>
            <td><input type="submit" value="Agregar" class="btn btn-success" /></td>
        </tr>
    </table>



}